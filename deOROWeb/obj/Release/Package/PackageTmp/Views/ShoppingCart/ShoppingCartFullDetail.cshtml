@model deORODataAccess.DTO.ShoppingCartDTO

<section class="content">
    <div class="col-md-12">
        <div class="box">
            <div class="margin">
                <div class="box-header">
                    <div class="row">
                        <div class="col-xs-12">
                            <h3>
                                <i class="fa fa-shopping-cart"></i>&nbsp; Shopping Cart Details<b></b>
                            </h3>
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <div class="box">
                        <div class="margin">
                            <div class="box-head">
                                <div class="row">
                                    <div class="col-xs-6">
                                        <h3 class="page-header">
                                            <small class="pull-left">Customer Name: <b>@Model.customername</b></small><br />
                                            <small class="pull-left">Location Name:<b> @Model.locationname</b></small><br />
                                            <small class="pull-left">Transaction Date Time:<b> @Model.created_date_time</b></small><br />
                                        </h3>
                                    </div>
                                    <div class="col-xs-6">
                                        <h3 class="page-header">
                                            <small class="pull-left">User Name: <b>@Model.username</b></small><br />
                                            <small class="pull-left">First Name: <b>@Model.firstname</b></small><br />
                                            <small class="pull-left">Last Name: <b>@Model.lastname</b></small><br />
                                        </h3>
                                    </div>
                                </div>
                            </div>
                            <div class="box-body">
                                <div class="row">
                                    <h1 class="page-header"><strong>Items</strong></h1>
                                    @{Html.RenderAction("GetShoppingCartDetails", "ShoppingCartDetail", new { pkid = Model.pkid });}
                                </div>
                                <div class="row">
                                    <h1 class="page-header"><strong>Payments</strong></h1>
                                    @{Html.RenderAction("GetPayments", "Payment", new { pkid = Model.pkid });}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


